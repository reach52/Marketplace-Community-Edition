<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:background="@color/list_back"
    android:paddingRight="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_back"
            android:padding="12dp">

            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/full_name"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="12sp"
                android:textColor="@color/purple"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/beneficiaryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/malayan"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/fullNameText"
                app:layout_constraintTop_toBottomOf="@id/fullNameText"/>

            <TextView
                android:id="@+id/contactText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:text="@string/contact"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/purple"
                app:layout_constraintStart_toStartOf="@id/beneficiaryTextView"
                app:layout_constraintTop_toBottomOf="@id/beneficiaryTextView"/>

            <TextView
                android:id="@+id/beneficiaryContactTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/contact"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/contactText"
                app:layout_constraintTop_toBottomOf="@id/contactText"/>

            <TextView
                android:id="@+id/relationshipText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/relationship"
                android:layout_marginTop="12dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/purple"
                app:layout_constraintStart_toStartOf="@id/beneficiaryContactTextView"
                app:layout_constraintTop_toBottomOf="@id/beneficiaryContactTextView"/>



            <TextView
                android:id="@+id/beneficiaryRelationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan"
                android:textSize="12sp"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/relationshipText"
                app:layout_constraintTop_toBottomOf="@id/relationshipText"/>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>